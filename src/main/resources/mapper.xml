<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.otus.DataSet.UserDataSet">

    <insert id="insert" parameterType="ru.otus.DataSet.UserDataSet">
        insert into mbusers (name, age) values (#{name}, #{age});
    </insert>

    <select id="select" resultType="ru.otus.DataSet.UserDataSet">
        select * from mbusers where name = #{name} limit 1
    </select>

    <select id = "getById" parameterType = "long" resultType="ru.otus.DataSet.UserDataSet">
        SELECT * FROM mbusers WHERE ID = #{id};
    </select>

</mapper>